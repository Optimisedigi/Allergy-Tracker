# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database
PGHOST=hostname
PGPORT=5432
PGDATABASE=database_name
PGUSER=username
PGPASSWORD=password

# Authentication (Required for Replit Auth)
SESSION_SECRET=your-secure-session-secret-key-here
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.replit.dev

# Application Configuration
NODE_ENV=development
PORT=5000

# Email Service (Optional - for email reminders)
# RESEND_API_KEY=your-resend-api-key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password

# Notification Services (Optional)
# FIREBASE_PROJECT_ID=your-firebase-project
# FIREBASE_PRIVATE_KEY=your-firebase-private-key
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Timezone Configuration (Default: Australia/Sydney)
DEFAULT_TIMEZONE=Australia/Sydney

# Cron Configuration (Optional)
CRON_SECRET=your-cron-secret-for-scheduled-tasks

# Development Tools
# VITE_API_URL=http://localhost:5000 (automatically configured)
